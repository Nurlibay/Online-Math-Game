<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_student_timetable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/math_game"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"
        android:fontFamily="@font/lilita_one_regular"
        app:layout_constraintBottom_toTopOf="@id/iv_math_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_math_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/math_icon_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>